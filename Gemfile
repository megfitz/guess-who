source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'thin'

gem 'activerecord'
gem 'pg'

group :development do
  gem 'shotgun'
end

gem 'dotenv'

# Deploy with Capistrano
group :development do
  gem "capistrano", "~> 3.4.0"
  gem 'capistrano-rbenv', '~> 2.0'
  gem "capistrano-bundler", "~> 1.1.0"
end
